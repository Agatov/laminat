%table.table
  %thead
    %tr
      %th
        Название
      %th
        = '...'
  %tbody
    - @colors.each do |color|
      %tr
        %td
          = color.name
        %td
          = link_to 'редактировать', edit_admin_color_path(color)
          = link_to 'удалить', admin_color_path(color), method: :delete