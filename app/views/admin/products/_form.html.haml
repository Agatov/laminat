= simple_form_for product, url: url do |f|
  = f.input :name
  = f.input :display_on_main_page
  = f.input :article
  = image_tag product.image_url(:thumb) if product.image?
  = f.input :image
  = f.association :texture
  = f.association :color
  = f.input :product_type
  = f.input :price
  = f.input :price_per_meter
  = f.input :meters_per_pack
  = f.input :number_per_pack
  = f.input :length
  = f.input :width
  = f.input :height
  = f.input :heat_floor
  = f.input :lifetime
  = f.input :lock_type
  = f.input :facet
  = f.input :stamping
  = f.input :weight
  = f.input :country, as: :string
  = f.input :about

  = f.submit 'Готово', class: [:btn, 'btn-lg', 'btn-success']
