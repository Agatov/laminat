%legend
  Товары

  %a.btn{href: new_admin_brand_collection_product_path(@brand, @collection), style: 'float: right'} Добавить

%table.table
  %thead
    %tr
      %th
        Артикул
      %th
        Название
      %th
        = '...'
  %tbody
    - @products.each do |product|
      %tr
        %td
          = product.article
        %td
          = product.name
        %td
          = link_to 'редактировать', edit_admin_brand_collection_product_path(@brand, @collection, product)
          = link_to 'удалить', admin_brand_collection_product_path(@brand, @collection, product), method: :delete